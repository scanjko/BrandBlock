<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>


        <referenceBlock name="product.info.details">
            <block class="Pixel\BrandBlock\Block\Product\View\Brand"
                   template="Pixel_BrandBlock::attribute.phtml" name="product.info.brand"
                   group="detailed_info">
                <arguments>
                    <argument name="at_code" xsi:type="string">brand_info</argument>
                    <argument name="css_class" xsi:type="string">brand</argument>
                    <argument name="title" translate="true" xsi:type="string">Brand</argument>
                </arguments>
            </block>

        </referenceBlock>


    </body>
</page>
